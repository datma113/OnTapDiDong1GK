<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetails">

    <ImageView
        android:id="@+id/imageView_pd"
        android:layout_width="297dp"
        android:layout_height="302dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvName_pd"
        android:layout_width="66dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/imageView_pd"
        app:layout_constraintTop_toBottomOf="@+id/imageView_pd" />

    <TextView
        android:id="@+id/tvPrice_pd"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:gravity="center"
        android:text="price"
        app:layout_constraintStart_toEndOf="@+id/tvName_pd"
        app:layout_constraintTop_toTopOf="@+id/tvName_pd" />

    <TextView
        android:id="@+id/tvQuantity_pd"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="1"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/ibtnRemove"
        app:layout_constraintStart_toEndOf="@+id/ibtnRemove"
        app:layout_constraintTop_toTopOf="@+id/ibtnRemove" />

    <ImageButton
        android:id="@+id/ibtnAdd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/ic_baseline_add_circle_outline_24"
        app:layout_constraintStart_toEndOf="@+id/tvQuantity_pd"
        app:layout_constraintTop_toTopOf="@+id/tvQuantity_pd" />

    <ImageButton
        android:id="@+id/ibtnRemove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/ic_baseline_remove_circle_outline_24"
        app:layout_constraintEnd_toEndOf="@+id/tvName_pd"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="@+id/tvName_pd"
        app:layout_constraintTop_toBottomOf="@+id/tvName_pd" />

    <TextView
        android:id="@+id/tv_details_pd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="52dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibtnRemove" />

    <Button
        android:id="@+id/addToCart"
        android:layout_width="352dp"
        android:layout_height="49dp"
        android:layout_marginBottom="48dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>